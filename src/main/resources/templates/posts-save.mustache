{{>layout/header}}

<h1>write post</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">title</label>
                <input type="text" class="form-control" id="title" placeholder="write the title">
            </div>
            <div class="form-group">
                <label for="author"> author </label>
                <input type="text" class="form-control" id="author" placeholder="write the author">
            </div>
            <div class="form-group">
                <label for="content"> content </label>
                <textarea class="form-control" id="content" placeholder="write the content"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">cancel</a>
        <button type="button" class="btn btn-primary" id="btn-save">save</button>
    </div>
</div>

{{>layout/footer}}